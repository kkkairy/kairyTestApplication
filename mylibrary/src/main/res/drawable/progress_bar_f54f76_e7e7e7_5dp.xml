<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色 （白色） -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/dp_5" />

            <gradient
                android:endColor="@color/color_e7e7e7"
                android:startColor="@color/color_e7e7e7" />
        </shape>
    </item>

    <!-- 设置进度条颜色（橙色） -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/dp_5" />

                <gradient
                    android:endColor="@color/text_color_f54f76"
                    android:startColor="@color/text_color_f54f76" />
            </shape>
        </clip>
    </item>

</layer-list>